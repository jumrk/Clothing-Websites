<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<div class="container mt-5">
    <a href="/user"><button type="button" class="btn-close" aria-label="Close"></button></a>
    <h2 class="mb-4">Lịch sử đơn hàng của bạn</h2>

    <!-- Orders Table -->
    <table class="table table-bordered table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Mã đơn hàng</th>
                <th>Ngày đặt</th>
                <th>Trạng thái</th>
                <th>Tổng tiền</th>
                <th>Hành động</th>
            </tr>
        </thead>
        <tbody id="order-table">
            {{#each orders}}
            <tr>
                <td>{{this._id}}</td>
                <td>{{this.orderDate}}</td>
                <td>{{this.status}}</td>
                <td>{{this.totalPrice}}.000VND</td>
                <td><a href="/orderDetail/{{this._id}}"><button class="btn btn-info btn-sm">Xem chi
                            tiết</button></a>
                </td>
            </tr>
            {{/each}}
        </tbody>
    </table>
</div>
