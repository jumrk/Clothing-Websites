<link rel="stylesheet" href="/css/auth.css">
<div class="container" id="container">
    <div class="form-container sign-in">
        <form id="forgot-password-form">
            <h1>Quên mật khẩu</h1>
            <div class="social-icons">
                <a href="/">
                    <i class="fa-solid fa-house"></i>
                </a>
            </div>
            <span>Nhập email để nhận mã xác nhận</span>
            <input type="email" placeholder="Email" id="email" required>
            <button type="submit" class="btn-primary" id="btn-send-code">Gửi mã xác nhận</button>
        </form>

        <form id="verify-code-form" class="d-none">
            <h1>Mã xác nhận</h1>
            <span>Nhập mã 6 chữ số đã gửi đến email của bạn</span>
            <input type="text" placeholder="Mã xác nhận" id="code" required>
            <button type="submit" class="btn-primary" id="btn-verify-code">Xác nhận</button>
        </form>

        <form id="reset-password-form" class="d-none">
            <h1>Đặt lại mật khẩu</h1>
            <span>Nhập mật khẩu mới của bạn</span>
            <input type="password" placeholder="Mật khẩu mới" id="password" required>
            <input type="password" placeholder="Xác nhận mật khẩu mới" id="confirm-password" required>
            <button type="submit" class="btn-primary" id="btn-reset-password">Đặt lại mật khẩu</button>
        </form>
    </div>

    <div>
        <div class="toggle-container">
            <div class="toggle">
                <div class="toggle-panel toggle-right">
                    <h1>Xin chào!</h1>
                    <p>Quay lại trang đăng nhập nếu bạn nhớ mật khẩu</p>
                    <a href="/auth/login">
                        <button class="hidden" id="back-to-login">Đăng nhập</button>
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>
<script type="module" src="/js/forgotPassword.js"></script>